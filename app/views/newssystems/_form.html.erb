<%= form_for(@newssystem) do |f| %>
  <% if newssystem.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(newssystem.errors.count, "error") %> prohibited this newssystem from being saved:</h2>

      <ul>
      <% newssystem.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :title, 'Titel', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.input :title, class: "form-control" %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :subTitle, 'Untertitel', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :subTitle, class: "form-control" %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :story, "News", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :story, class: "form-control", rows: "3" %>
    </div>
  </div>

  <div class="actions form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'News erstellen', class: "btn btn-default"%>
    </div>
  </div>
<% end %>
