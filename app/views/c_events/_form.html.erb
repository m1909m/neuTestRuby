      <h2><%= pluralize(c_event.errors.count, "error") %> prohibited this c_event from being saved:</h2>

      <ul>
      <% c_event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-inputs">
      <%= f.text_field :title %>
      <%= f.text_field :description %>
      <%= f.text_field :date_range, input_html: { class: "form-control input-sm date-range-picker" } %>
      <%= f.text_field :start, as: :hidden, value: Date.today, class: 'form-control input-sm start_hidden' %>
      <%= f.text_field :end, as: :hidden, value: Date.today, class: 'form-control input-sm end_hidden' %>
      <%= f.check_box :color, as: :select, collection: [['Black','black'], ['Green','green'], ['Red','red']] %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
      <%= link_to 'Delete',
                  event,
                  method: :delete,
                  class: 'btn btn-danger',
                  data: { confirm: 'Are you sure?' },
                  remote: true unless @event.new_record? %>
    </div>
<% end %>
