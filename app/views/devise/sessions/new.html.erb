<div class="col-xs-12">
  <h1>Zugangsbereich</h1>
</div>
<div class="col-xs-12" style="margin-bottom: 1em;">
  <%= image_tag("Titelbild_Zugangsbereich.jpg", :alt => "Zugangsbereich", :class => "img-responsive center-block") %>

</div>
<div class="col-xs-12">
  <%= bootstrap_devise_error_messages! %>
</div>
<div class="col-sm-6">

</div>
<div class="col-sm-6">
  <h3 style="color: #f59d0e;">Anmeldung</h3>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: "form" }) do |f| %>
      <div class="form-group" style="">
        <%= f.label :email, 'Email Adresse', class: "control-label col-sm-3" %>
        <div class="col-sm-9">
          <%= f.text_field :email, autofocus: true, class: "form-control" %>
        </div>
      </div>
      <div class="form-group" style="">
        <%= f.label :password, 'Passwort', class: "control-label col-sm-3", style: "margin-top: 10px; margin-bottom: 10px;" %>
        <div class="col-sm-9" style="margin-top: 10px; margin-bottom: 10px;">
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>
      </div>
      <!--
      <%# if devise_mapping.rememberable? %>
        <div class="checkbox">
          <%#= f.label :remember_me do %>
            <%#= f.check_box :remember_me %> <%#= t('.remember_me', :default => "Remember me") %>
          <%# end %>
        </div>
      <%# end %> -->
      <div class="col-xs-12" style="text-align: center; margin-top: 10px;">
        <%= f.submit  "Anmelden", class: "btn btn-primary", style: "color: #FFF; background-color: #f59d0e; border: 0px; width: 200px;" %>
      </div>
  <% end %>
</div>

