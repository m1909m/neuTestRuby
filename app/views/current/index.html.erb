<div class="col-xs-12">
  <h1>Zugangsbereich</h1>
</div>
<div class="col-xs-12" style="margin-bottom: 1em;">
  <%= image_tag("Titelbild_Zugangsbereich.jpg", :alt => "Zugangsbereich", :class => "img-responsive center-block") %>
</div>

<% if current_user.present? %>
    <div class="col-xs-12">
    <% if current_user.has_role?(:fortbildung) || current_user.has_role?(:admin)%>
		<p><strong>Folgende Bereiche können Sie bearbeiten:</strong></p>
	  <% if current_user.has_role?(:news) || current_user.has_role?(:admin)%>
      <div class="list-group">
        <a href="/admin/news" class="list-group-item" target="_self">Aktuelles</a>
      </div>
    <% end %>
	<% if current_user.has_role?(:admin) %>
        <div class="list-group">
          <a href="/pages/" class="list-group-item" target="_self">Seiten</a>
        </div>
    <% end %>
      <div class="list-group">
        <a href="/administrator/rooms" class="list-group-item" target="_self">Veranstaltungssystem</a>
      </div>
    <% end %>
    <% if current_user.has_role?(:newsletter) || current_user.has_role?(:admin)%>

      <div class="list-group">
        <a href="/news_contents" class="list-group-item" target="_self">Newslettersystem</a>
      </div>
    <% end %>
    <% if current_user.has_role?(:shop) || current_user.has_role?(:admin)%>
      <div class="list-group">
        <a href="/articles" class="list-group-item" target="_self">BAT-KF: Artikelliste</a>
      </div>
    <% end %>
    <% if current_user.has_role?(:diakonie) || current_user.has_role?(:admin)%>
        <div class="list-group">
          <a href="/pages/Diakonie" class="list-group-item" target="_self">Diakonie</a>
        </div>
    <% end %>
    </div>

    <% if current_user.has_role?(:event) %>
      <div class="col-xs-12">
        <p><strong>Folgende Dateien stehen zum Downloaden zur Verfügung:</strong></p>
        <% if @resumes.length > 0 %>
            <table class="table table-responsive table-striped half">
              <thead>
              <tr>
                <th>Dokumentenname</th>
                <th></th>
              </tr>
              </thead>

              <tbody>
              <% @resumes.each do |resume| %>

                  <tr>
                    <td><%= resume.name %></td>
                    <td><a style="color: #f59d0e;" href="<%= resume.attachment_url %>" target="_blank" rel="noopener noreferrer">Anzeigen</a></td>
                  </tr>

              <% end %>
              </tbody>

            </table>
        <% else%>
            <p>Die Veranstaltung hat keine Dokumente</p>
        <% end %>
      </div>
    <% end %>

<% else %>


<%end%>