<p id="notice"><%= notice %></p>

<h1>News Contents</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Sendtime</th>
      <th>Newsletter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news_contents.each do |news_content| %>
      <tr>
        <td><%= news_content.title %></td>
        <td><%= news_content.content %></td>
        <td><%= news_content.sendtime %></td>
        <td><%= news_content.newsletter_id %></td>
        <td><%= link_to 'Show', news_content %></td>
        <td><%= link_to 'Edit', edit_news_content_path(news_content) %></td>
        <td><%= link_to 'Destroy', news_content, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New News Content', new_news_content_path %>
