              </div>
          </div>

      </div>

  </div>


<script>
	$(document).ready( function() {
  $('.aus').not('.ein').next('.accordion').hide();
  $('.aus').click( function() {
    if ($(this).hasClass('ein')) {
      $(this).next('.accordion').slideToggle('slow');
      $(this).removeClass('ein');
    } else {
	  $('.ein').next('.accordion').slideToggle('slow');
      $('.ein').removeClass('ein');
      $(this).next('.accordion').slideToggle('slow');
      $(this).addClass('ein');
    };
    return false;
  });
});
</script>