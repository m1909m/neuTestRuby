<div class="col-xs-12">
  <h1>Neuen Raum erstellen</h1>
</div>
<div class="col-xs-12" style="margin-bottom: 1em;">
  <%= image_tag("Titelbild_Zugangsbereich.jpg", :alt => "Newsletter", :class => "img-responsive center-block") %>

</div>
<div class="col-xs-12">
  <% if @room.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@room.errors.count, "error") %> Fehler beim Speichern</h2>

        <ul>
          <% @room.errors.full_messages.each do |message| %>
              <li><%= message %></li>
          <% end %>
        </ul>
      </div>
  <% end %>
</div>
<div class="col-xs-12">
  <form class="new_room" id="new_room" action="/administrator/rooms" accept-charset="UTF-8" method="post">
    <input name="utf8" type="hidden" value="&#x2713;" /><input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />

    <div class="form-group row">
      <label for="room_number" class="col-sm-2 control-label">Bezeichnung</label>
      <div class="col-sm-10">
        <input type="text" name="room[number]" id="room_number" class="form-control" />
      </div>
    </div>

    <div class="form-group row">
      <label for="room_building" class="col-sm-2 control-label">Ort</label>
      <div class="col-sm-10">
        <input size="16" type="text" name="room[building]" id="room_building" class="form-control" />
      </div>
    </div>

    <div class="form-group row">
      <label for="room_size" class="col-sm-2 control-label">Größe</label>
      <div class="col-sm-10">
        <input size="16" type="number" name="room[size]" id="room_size" class="form-control" min="0" />
      </div>
    </div>


    <div class="actions">
      <input type="submit" class="btn btn-default col-sm-offset-2" name="commit" value="Raum erstellen" data-disable-with="Raum hinzufügen" />
    </div>
  </form>

</div>