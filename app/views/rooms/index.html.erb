<% @rooms.each do |room| %>
    <div class="list-group">
      <a href="/rooms/<%= room.id%>" class="list-group-item"><table><tr><td><%= room.number %></td><td><%= room.size %></td><td><%= room.building %></td></tr></table></a>
    </div>
<% end %>



<div ng-app="roomsContainer" ng-controller="RoomCtrl">
  <ng-view></ng-view>
  <h1>R채ume</h1>
  <div ng-show="!rooms.length">Keine R채ume vorhanden</div>
  <div ng-repeat="room in rooms" style="margin: 5px;">
    <div class="list-group">
      <a href="" ng-click="showEventCal(1)" class="list-group-item"><table><tr><td>{{room.number}}</td><td>{{room.size}}</td><td>{{room.building}}</td></tr></table></a>
    </div>

  </div>

  <div class="calendar" ng-model="eventSources" calendar="myCalendar" config="uiConfig.calendar" ui-calendar="uiConfig.calendar"></div>




</div>

