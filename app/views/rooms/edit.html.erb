<script type="text/javascript">
    $(document).ready(function(){
        $("#datetimepicker1 input").val('<%= @c_event.start.to_time.strftime("%Y-%m-%d %k:%M") %>');
        $("#datetimepicker2 input").val('<%= @c_event.end.to_time.strftime("%Y-%m-%d %k:%M") %>');
        $("#datetimepicker3 input").val('<%= @c_event.startSecond != "" && @c_event.startSecond != nil ? @c_event.startSecond.to_time.strftime("%Y-%m-%d %k:%M") : "" %>');
        $("#datetimepicker4 input").val('<%= @c_event.endSecond != "" && @c_event.endSecond != nil  ? @c_event.endSecond.to_time.strftime("%Y-%m-%d %k:%M") : "" %>');
        $("#datetimepicker5 input").val('<%= @c_event.startThird != "" && @c_event.startThird != nil  ? @c_event.startThird.to_time.strftime("%Y-%m-%d %k:%M") : "" %>');
        $("#datetimepicker6 input").val('<%= @c_event.endThird != "" && @c_event.endThird != nil  ? @c_event.endThird.to_time.strftime("%Y-%m-%d %k:%M") : "" %>');
        $("#datetimepicker7 input").val('<%= @c_event.startLogin.to_time.strftime("%Y-%m-%d %k:%M") %>');
        $("#datetimepicker8 input").val('<%= @c_event.endLogin.to_time.strftime("%Y-%m-%d %k:%M") %>');

        $(".form_datetime").datetimepicker({format: 'yyyy-mm-dd hh:ii'});
        $('#datetimepicker1').datetimepicker({locale: 'de'});
        $('#datetimepicker2').datetimepicker({
            locale: 'de',
            useCurrent: false //Important! See issue #1075
        });
        $("#datetimepicker1").on("dp.change", function (e) {
            //          $scope.datePicker.startOne = $("#datetimepicker1").val();
            $('#datetimepicker2').data("DateTimePicker").minDate(e.date);
        });
        $("#datetimepicker2").on("dp.change", function (e) {
            //          $scope.datePicker.endOne = $("#datetimepicker2").val();
            $('#datetimepicker1').data("DateTimePicker").maxDate(e.date);
        });

        $('#datetimepicker3').datetimepicker({locale: 'de'});
        $('#datetimepicker4').datetimepicker({
            locale: 'de',
            useCurrent: false //Important! See issue #1075
        });
        $("#datetimepicker3").on("dp.change", function (e) {
            //          $scope.datePicker.startTwo = $("#datetimepicker3").val();
            $('#datetimepicker4').data("DateTimePicker").minDate(e.date);
        });
        $("#datetimepicker4").on("dp.change", function (e) {
            //          $scope.datePicker.endTwo = $("#datetimepicker4").val();
            $('#datetimepicker3').data("DateTimePicker").maxDate(e.date);
        });

        $('#datetimepicker5').datetimepicker({locale: 'de'});
        $('#datetimepicker6').datetimepicker({
            locale: 'de',
            useCurrent: false //Important! See issue #1075
        });
        $("#datetimepicker5").on("dp.change", function (e) {
            //        $scope.datePicker.startThree = $("#datetimepicker5").val();
            $('#datetimepicker6').data("DateTimePicker").minDate(e.date);
        });
        $("#datetimepicker6").on("dp.change", function (e) {
            //  $scope.datePicker.endThree = $("#datetimepicker6").val();
            $('#datetimepicker5').data("DateTimePicker").maxDate(e.date);
        });
        $('#datetimepicker7').datetimepicker({locale: 'de'});
        $('#datetimepicker8').datetimepicker({
            locale: 'de',
            useCurrent: false //Important! See issue #1075
        });
        $("#datetimepicker7").on("dp.change", function (e) {
            //        $scope.datePicker.startThree = $("#datetimepicker5").val();
            $('#datetimepicker8').data("DateTimePicker").minDate(e.date);
        });
        $("#datetimepicker8").on("dp.change", function (e) {
