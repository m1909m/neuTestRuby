<div class="col-xs-12">
  <h1><%= @site %></h1>
</div>


<p id="notice"><%= notice %></p>
<div class="col-xs-12">

  <% if current_user.present? %>
      <% if current_user.has_role?(@site) || current_user.has_role?(:admin)%>
          <table class="table table-responsive table-striped">
            <thead>
            <tr>
              <th>Seiteninhalt</th>
              <th></th>
              <!--<th colspan="3"></th> -->
            </tr>
            </thead>

            <tbody>
            <% @pages.each do |page| %>
                <tr>
                  <td><%= truncate(ActionView::Base.full_sanitizer.sanitize(page.content.html_safe), length: 200) %></td>

                  <td><% if page.accept %> Veröffentlicht <% else %> Nicht veröffentlicht <% end %></td>
             <!--     <td>% link_to 'Anzeigen', news_content %></td>
                  <td>% link_to 'Bearbeiten', edit_news_content_path(news_content) %></td>
                  <td>% link_to 'Löschen', news_content, method: :delete, data: { confirm: 'Sind sie sich sicher?' } %></td> -->
                </tr>
            <% end %>
            </tbody>
          </table>
<% end %>




      <br>

      <%= link_to 'Neuer Newsletter erstellen', new_news_content_path, target: "_self" %>
      </div>

  <% else %>
      <%= link_to 'Melden Sie sich für den Newsletter an', new_abo_newscontent_path %>
  <% end %>


