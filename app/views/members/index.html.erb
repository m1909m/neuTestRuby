<div class="col-xs-12">
  <h1>Aktuelle Veranstaltungen</h1>
</div>
<div class="col-xs-12" style="margin-bottom: 1em;">
  <%= image_tag("Titelbild_Schulungstermine.jpg", :alt => "Aktuelleveranstaltungen", :class => "img-responsive center-block") %>

</div>
  <div class="col-xs-12">
    <p>Eine Seminar&uuml;bersicht k&ouml;nnen Sie <a style="color: #f59d0e;" title="Seminarinhalte20117" href="../uploads/resume/attachment/33/Seminar&uuml;bersicht_2017.pdf" target="_blank" rel="noopener noreferrer">hier</a> einsehen. Den genauen Überblick zu den Themen der Seminare finden Sie <a style="color: #f59d0e;" href="../fortbildung/seminarinhalte">hier</a>.</p>
      <% @color = true %>
  <% @events.each do |event|
    if(@color == true)
      @color = false;%>

          <div class="thumbnail col-xs-12 col-sm-6 col-md-3" style="">
            <div class="caption">
              <h3><% if event.endThird != "" && event.endThird != nil %> <%= event.start.to_time.strftime("%d.%m.%Y") %> – <%= event.endThird.to_time.strftime("%d.%m.%Y") %> <%= event.start.to_time.strftime("%H:%M") %> - <%= event.endThird.to_time.strftime("%H:%M") %> <% elsif event.endSecond != "" && event.endSecond != nil %> <%= event.start.to_time.strftime("%d.%m.%Y") %> – <%= event.endSecond.to_time.strftime("%d.%m.%Y") %> <%= event.start.to_time.strftime("%H:%M") %> - <%= event.endSecond.to_time.strftime("%H:%M") %> <% else %> <%= event.end.to_time.strftime("%d.%m.%Y") %> <%= event.start.to_time.strftime("%H:%M") %> - <%= event.end.to_time.strftime("%H:%M") %> <% end %><br><%= event.title %></h3>

              <% if event.description != "" && event.description != nil %><p><small>Beschreibung:</small><br /><%= event.description %></p><% end %>
              <%@rooms.each do |room|
                if(event.room_id == room.id) %>
                  <p><%= room.building %></p>
                      <p style="position:absolute; bottom: 0.6em; left: 1em;"><%= (event.maxSize - event.member) %> freie Pl&auml;tze</p>
                      <a href="/fortbildung/seminare/neu/<%=event.id%>" style="position: absolute;color: #f59d0e; bottom: 1em; right: 1em;">Anmelden</a>
                  <%#= link_to 'Anmelden', new_member_path(event), :style => 'float: right;color: #f4bfa5;' %>
                <% end %>
              <% end %>
            </div>
          </div>
      <% elsif(@color == false)
           @color = true%>
          <div class="thumbnail col-xs-12 col-sm-6 col-md-3" style="background-color: #f1f1f1;">
            <div class="caption">
              <h3><% if event.endThird != "" && event.endThird != nil %> <%= event.start.to_time.strftime("%d.%m.%Y") %> – <%= event.endThird.to_time.strftime("%d.%m.%Y") %> <%= event.start.to_time.strftime("%H:%M") %> - <%= event.endThird.to_time.strftime("%H:%M") %> <% elsif event.endSecond != "" && event.endSecond != nil %> <%= event.start.to_time.strftime("%d.%m.%Y") %> – <%= event.endSecond.to_time.strftime("%d.%m.%Y") %> <%= event.start.to_time.strftime("%H:%M") %> - <%= event.endSecond.to_time.strftime("%H:%M") %> <% else %> <%= event.end.to_time.strftime("%d.%m.%Y") %> <%= event.start.to_time.strftime("%H:%M") %> - <%= event.end.to_time.strftime("%H:%M") %> <% end %><br><%= event.title %></h3>

              <% if event.description != "" && event.description != nil %><p><small>Beschreibung:</small><br /><%= event.description %></p><% end %>
              <%@rooms.each do |room|
                if(event.room_id == room.id) %>
                      <p><%= room.building %></p>
                      <p style="position:absolute; bottom: 0.6em; left: 1em;"><%= (event.maxSize - event.member) %> freie Pl&auml;tze</p>
                      <a href="/fortbildung/seminare/neu/<%=event.id%>" style="position: absolute;color: #f59d0e; bottom: 1em; right: 1em;">Anmelden</a>
                      <%#= link_to 'Anmelden', new_member_path(event), :style => 'float: right;color: #f4bfa5;' %>
            <% end %>
              <% end %>
            </div>
          </div>
      <% end %>
  <% end %>
  </div>



