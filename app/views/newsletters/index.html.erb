<p id="notice"><%= notice %></p>

<h1>Newsletters</h1>
<% if current_user.present? %>
<table class="table">
  <thead>
    <tr>
      <th>From</th>
      <th>Newsheader</th>
      <th>Newsbody</th>
      <th>Newsfooter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @newsletters.each do |newsletter| %>
      <tr>
        <td><%= newsletter.from %></td>
        <td><%= newsletter.newsHeader %></td>
        <td><%= newsletter.newsBody %></td>
        <td><%= newsletter.newsFooter %></td>
        <td><%= link_to 'Anzeigen', newsletter %></td>
        <td><%= link_to 'Bearbeiten', edit_newsletter_path(newsletter) %></td>
        <td><%= link_to 'Löschen', newsletter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Neuer Newsletter erstellen', new_newsletter_path %>

<% else %>
<%= link_to 'Melden Sie sich für den Newsletter an', new_abo_newsletter_path %>
<% end %>


