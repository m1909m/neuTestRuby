<div class="col-xs-12">
  <h1>Newslettersystem</h1>
</div>
<div class="col-xs-12" style="margin-bottom: 1em;">
  <%= image_tag("Titelbild_Newsletter.jpg", :alt => "Newsletter", :class => "img-responsive center-block") %>

</div>

<p id="notice"><%= notice %></p>
<div class="col-xs-12">

  <% if current_user.present? %>

      </div>
      <h3>Newsletter Archiv</h3>

      <table class="table table-responsive table-striped">
        <thead>
        <tr>
          <th>Überschrift</th>
          <th>Unterüberschrift</th>
          <th>Neuigkeit</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @news.each do |news| %>
            <tr>
              <td><%= news.title %></td>
              <td><%= news.subTitle %></td>
              <td><%= truncate(ActionView::Base.full_sanitizer.sanitize(news.story.html_safe), length: 200) %></td>
              <td><%= link_to 'Anzeigen', news %></td>
              <td><%= link_to 'Bearbeiten', edit_news_path(news_content) %></td>
              <td><%= link_to 'Löschen', news, method: :delete, data: { confirm: 'Sind sie sich sicher?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'Neue News erstellen', new_news_path, target: "_self" %>

  <% else %>
      <%= link_to 'Melden Sie sich für den Newsletter an', new_abo_newscontent_path %>
  <% end %>


