<% if current_user.present? %>
    <p id="notice"><%= notice %></p>

<h1>Aktuelles</h1>

  <% @color = true %>
    <% @news.each do |news|
        if(@color == true)
          @color = false;%>

      <div class="thumbnail col-xs-12 col-sm-6 col-md-3" style="">
        <div class="caption">
          <h3><%= news.created_at.strftime("%d.%m.%Y") %><br><%= news.title %></h3>

          <p><%=  truncate(ActionView::Base.full_sanitizer.sanitize(news.story.html_safe), length: 200) %></p>
          <p><%= link_to 'weiterlesen', news, :style => 'float: right;color: #f4bfa5;' %></p>

        </div>
      </div>
        <% elsif(@color == false)
          @color = true %>
        <div class="thumbnail col-xs-12 col-sm-6 col-md-3" style="background-color: #dfdfde;">
          <div class="caption">
            <h3><%= news.created_at.strftime("%d.%m.%Y") %><br><%= news.title %></h3>
            <p><%= truncate(ActionView::Base.full_sanitizer.sanitize(news.story.html_safe), length: 200) %></p>
            <p><%= link_to 'weiterlesen', news, :style => 'float: right;color: #f4bfa5;' %></p>

          </div>
        </div>
        <% end %>

    <% end %>

<br>

<div class="col-sm-12">

</div>
<% else %>
    <ul><li><%= link_to 'Bitte Anmelden', new_user_session_path %></li></ul>
<% end %>
