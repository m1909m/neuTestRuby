<div class="col-xs-12">
  <h1>Newslettersystem</h1>
</div>
<div class="col-xs-12" style="margin-bottom: 1em;">
  <%= image_tag("Titelbild_Newsletter.jpg", :alt => "Newsletter", :class => "img-responsive center-block") %>

</div>

<p id="notice"><%= notice %></p>
<div class="col-xs-12">

<% if current_user.present? %>
    <div class="list-group">
      <a href="/newsletters/new" class="list-group-item">Neues Layout erstellen</a>
    </div>
 </div>
    <h3>Newsletter Archiv</h3>

<table class="table">
  <thead>
    <tr>
      <th>Newsletter Inhalt</th>
      <th>Sendedatum</th>
      <th>Gesendet</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @newscontents.each do |newscontent| %>
      <tr>
        <td><%= newscontent.content %></td>
        <td><%= newscontent.sendtime %></td>
        <td><% if newscontent.send %> Versendet <% else %> Nicht versendet <% end %></td>
        <td><%= link_to 'Anzeigen', newscontent %></td>
        <td><%= link_to 'Bearbeiten', edit_newscontent_path(newscontent) %></td>
        <td><%= link_to 'Löschen', newscontent, method: :delete, data: { confirm: 'Sind sie sichsicher?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Neuer Newsletter erstellen', new_newscontent_path %>

<% else %>
<%= link_to 'Melden Sie sich für den Newsletter an', new_abo_newscontent_path %>
<% end %>


