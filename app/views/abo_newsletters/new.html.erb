    </div>
    <div class="field form-group col-xs-6">

    </div>


    <!--

          <div class="form-group checkbox">

            <label> f.check_box :enable %>Angemeldet</label>

          </div> -->

    <!--

      <div class="field">

        <#%= f.label :newsletter_id %>

        <#%= f.text_field :newsletter_id %>

      </div>

    -->

    <div class="actions form-group col-xs-6">

      <%= f.submit "Newsletter Abmelden", class: "btn btn-default" %>

    </div>

<% end %>

